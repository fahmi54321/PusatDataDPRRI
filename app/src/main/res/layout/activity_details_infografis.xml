<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.menu.filter.DetailsInfografisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"></ImageButton>

            <TextView
                android:id="@+id/txtInfografis"
                style="@style/TextView.robotoBoldWatnaKulit_18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="Nama" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgInfografis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="55dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            style="@style/Button.primary_circle_white_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="36dp"
            android:text="@string/deskripsi" />

        <TextView
            style="@style/TextView.robotoRegulerOrange_14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="55dp"
            android:text="@string/dpr_ri_periode_2019_2024" />

        <Button
            style="@style/Button.primary_circle_white_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="36dp"
            android:text="@string/penulis" />

        <TextView
            style="@style/TextView.robotoRegulerOrange_14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="55dp"
            android:text="@string/elsa_puspitasari" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>