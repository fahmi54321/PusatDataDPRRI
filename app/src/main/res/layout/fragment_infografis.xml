<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.menu.InfografisFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"></ImageButton>
        <EditText
            android:id="@+id/editTextTextPersonName3"
            style="@style/EditText.key2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_edt_search_grey"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:hint="@string/cari_data_set" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:background="@color/warnaKulit1"
            android:src="@drawable/ic_search_key_black"></ImageButton>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

</LinearLayout>