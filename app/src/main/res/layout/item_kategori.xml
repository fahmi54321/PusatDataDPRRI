<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="72dp"
    android:gravity="center"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_oval_warna_kulit"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imgKategori"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/kr" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtKategori"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.robotoRegulerBlack_9sp"
        android:text="@string/kesejahteraan_rakyat" />
</LinearLayout>